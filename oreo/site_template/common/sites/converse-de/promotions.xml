<?xml version="1.0" encoding="UTF-8"?>
<promotions xmlns="http://www.demandware.com/xml/impex/promotion/2008-01-31">
    <campaign campaign-id="Nike/Converse EMEA Employee discount">
        <description>Nike/Converse Employee discount for EMEA sites</description>
        <enabled-flag>true</enabled-flag>
        <customer-groups>
            <customer-group group-id="emea.converse.and.nike.employees"/>
        </customer-groups>
    </campaign>

    <campaign campaign-id="products-in-salesPricebook-campaign">
        <description>products-in-salesPricebook-campaign used to refine searches on All Sale category indicating it should match Products in that category AND with prices in Sales Price Books</description>
        <enabled-flag>true</enabled-flag>
        <campaign-scope>
            <applicable-online/>
            <applicable-in-store/>
        </campaign-scope>
        <customer-groups>
            <customer-group group-id="Everyone"/>
        </customer-groups>
    </campaign>

    <campaign campaign-id="AllOrderable-AllComingSoon-products-promotion-Campaign">
        <description>AllOrderable-AllComingSoon-products-Campaign to get cs products</description>
        <enabled-flag>true</enabled-flag>
        <campaign-scope>
            <applicable-online/>
        </campaign-scope>
        <customer-groups>
            <customer-group group-id="Everyone"/>
        </customer-groups>
    </campaign>

    <promotion promotion-id="EMEA.EmployeeDiscount">
        <enabled-flag>true</enabled-flag>
        <archived-flag>false</archived-flag>
        <searchable-flag>false</searchable-flag>
        <name xml:lang="en">Nike/Converse Employee Discount for EMEA</name>
    </promotion>


    <promotion promotion-id="products-in-salesPricebook-promotion">
        <enabled-flag>true</enabled-flag>
        <archived-flag>false</archived-flag>
        <searchable-flag>true</searchable-flag>
        <exclusivity>no</exclusivity>
        <name xml:lang="x-default">products-in-salesPricebook-promotion used to refine searches on All Sale category indicating it should match Products in that category AND with prices in Sales Price Books</name>
        <custom-attributes>
            <custom-attribute attribute-id="promotionType">BOGO</custom-attribute>
        </custom-attributes>
        <product-promotion-rule>
            <qualifying-products>
                <included-products>
                    <condition-group>
                        <pricebook-condition>
                            <pricebook-id>salesPricebook_Converse_EURO</pricebook-id>
                            <pricebook-id>salesPricebook_Converse_EURO_50</pricebook-id>
                            <pricebook-id>salesPricebook_Converse_DE</pricebook-id>
                        </pricebook-condition>
                    </condition-group>
                </included-products>
            </qualifying-products>
            <discounted-products>
                <included-products>
                    <condition-group>
                        <product-id-condition operator="is equal">
                            <product-id>SHALL_NOT_MATCH_ANY_PRODUCT</product-id>
                        </product-id-condition>
                    </condition-group>
                </included-products>
            </discounted-products>
            <bogo-discounts>
                <bogo>
                    <threshold>1</threshold>
                    <percentage>0.0</percentage>
                    <eligible-quantity>1</eligible-quantity>
                </bogo>
            </bogo-discounts>
        </product-promotion-rule>
    </promotion>

    <promotion promotion-id="AllOrderable-AllComingSoon-products-promotion">
        <enabled-flag>true</enabled-flag>
        <archived-flag>false</archived-flag>
        <searchable-flag>true</searchable-flag>
        <exclusivity>no</exclusivity>
        <name xml:lang="x-default">AllOrderable-AllComingSoon-products-promotion to get cs products</name>
        <custom-attributes>
            <custom-attribute attribute-id="promotionType">BOGO</custom-attribute>
        </custom-attributes>
        <product-promotion-rule>
            <qualifying-products>
                <included-products>
                    <condition-group>
                        <attribute-condition operator="exists" attribute-id="comingSoon"/>
                    </condition-group>
                    <condition-group>
                        <inventory-condition operator="greater than">
                            <ats>1</ats>
                        </inventory-condition>
                    </condition-group>
                    <condition-group>
                        <attribute-condition operator="equals" attribute-id="showIfOutOfStock">
                            <attribute-value>true</attribute-value>
                        </attribute-condition>
                    </condition-group>
                    <condition-group>
                        <attribute-condition operator="equals" attribute-id="productType">
                            <attribute-value>dyo</attribute-value>
                        </attribute-condition>
                    </condition-group>
                </included-products>
            </qualifying-products>
            <discounted-products>
                <included-products>
                    <condition-group>
                        <product-id-condition operator="is equal">
                            <product-id>SHALL_NOT_MATCH_ANY_PRODUCT</product-id>
                        </product-id-condition>
                    </condition-group>
                </included-products>
            </discounted-products>
            <bogo-discounts>
                <bogo>
                    <threshold>1</threshold>
                    <percentage>0.0</percentage>
                    <eligible-quantity>1</eligible-quantity>
                </bogo>
            </bogo-discounts>
        </product-promotion-rule>
    </promotion>

    <promotion-campaign-assignment promotion-id="EMEA.EmployeeDiscount" campaign-id="Nike/Converse EMEA Employee discount">
        <qualifiers match-mode="any">
            <customer-groups/>
            <source-codes/>
            <coupons/>
        </qualifiers>
    </promotion-campaign-assignment>

    <promotion-campaign-assignment promotion-id="products-in-salesPricebook-promotion" campaign-id="products-in-salesPricebook-campaign">
        <qualifiers match-mode="any">
            <customer-groups/>
            <source-codes/>
            <coupons/>
        </qualifiers>
    </promotion-campaign-assignment>

    <promotion-campaign-assignment promotion-id="AllOrderable-AllComingSoon-products-promotion" campaign-id="AllOrderable-AllComingSoon-products-promotion-Campaign">
        <qualifiers match-mode="any">
            <customer-groups/>
            <source-codes/>
            <coupons/>
        </qualifiers>
    </promotion-campaign-assignment>

</promotions>
