<?xml version="1.0" encoding="UTF-8"?>
<promotions xmlns="http://www.demandware.com/xml/impex/promotion/2008-01-31">
    <campaign campaign-id="Robot Test Campaign">
        <enabled-flag>true</enabled-flag>
        <customer-groups>
            <customer-group group-id="Everyone"/>
        </customer-groups>
    </campaign>

    <global-promotion-settings>
        <global-excluded-products>
            <included-products>
                <condition-group>
                    <attribute-condition operator="equals" attribute-id="pillar">
                        <attribute-value>Gift Cards</attribute-value>
                    </attribute-condition>
                    <attribute-condition operator="equals" attribute-id="productType">
                        <attribute-value>dyo</attribute-value>
                    </attribute-condition>
                </condition-group>
                <condition-group>
                    <attribute-condition operator="equals" attribute-id="core">
                        <attribute-value>true</attribute-value>
                    </attribute-condition>
                </condition-group>
            </included-products>
        </global-excluded-products>
    </global-promotion-settings>

    <promotion promotion-id="test shipping promotion robot">
        <enabled-flag>true</enabled-flag>
        <searchable-flag>false</searchable-flag>
        <exclusivity>no</exclusivity>
        <name xml:lang="x-default">Test discount for automated testing</name>
        <callout-msg xml:lang="x-default">Test discount for automated testing</callout-msg>
        <custom-attributes>
            <custom-attribute attribute-id="promotionType">FSHP</custom-attribute>
        </custom-attributes>
        <shipping-promotion-rule>
            <qualifying-products>
                <included-products>
                    <condition-group>
                        <attribute-condition operator="equals" attribute-id="productType">
                            <attribute-value>regular</attribute-value>
                        </attribute-condition>
                    </condition-group>
                    <condition-group>
                        <attribute-condition operator="equals" attribute-id="productType">
                            <attribute-value>dyo</attribute-value>
                        </attribute-condition>
                    </condition-group>
                </included-products>
            </qualifying-products>
            <shipping-methods>
                <method-id>usps_ground</method-id>
                <method-id>email_delivery</method-id>
                <method-id>ups_next_day</method-id>
                <method-id>ups_express</method-id>
                <method-id>mail_delivery</method-id>
                <method-id>ups_expedited</method-id>
                <method-id>ups_ground</method-id>
            </shipping-methods>
            <disable-global-excluded-products>true</disable-global-excluded-products>
            <discounts condition-type="shipment-total">
                <discount>
                    <threshold>1.0</threshold>
                    <free/>
                </discount>
            </discounts>
        </shipping-promotion-rule>
    </promotion>

    <promotion-campaign-assignment promotion-id="test shipping promotion robot" campaign-id="Robot Test Campaign">
        <qualifiers match-mode="any">
            <customer-groups/>
            <source-codes/>
            <coupons/>
        </qualifiers>
    </promotion-campaign-assignment>
</promotions>
