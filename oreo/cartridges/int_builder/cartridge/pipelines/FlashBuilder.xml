<?xml version="1.0" encoding="UTF-8" ?>
<?demandware-pipeline version="2.0"?>

<pipeline group="converse" type="view">
  <description>Service for verify if user is logged in or not, and for provide Customer Profiles for the Builder,</description>
  <branch basename="ShowPoster">
    <segment>
      <node>
        <start-node name="ShowPoster" secure="false"/>
        <node-display x="0" y="0"/>
      </node>
      <simple-transition>
        <transition-display>
          <bend-point relative-to="source" x="0" y="1"/>
        </transition-display>
      </simple-transition>
      <node>
        <interaction-node transaction-required="false">
          <template buffered="true" dynamic="false" name="imageservice/imageposter"/>
        </interaction-node>
        <node-display x="0" y="1"/>
      </node>
    </segment>
  </branch>
</pipeline>
