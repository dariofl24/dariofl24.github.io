<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19">
    
    <field  formid="stateCode" 
            label="forms.state" 
            type="string"
            default="England"
            mandatory="false"
            binding="stateCode" 
            missing-error="forms.address.state.missing" 
            value-error="forms.address.field.invalid">
        <options>           
            <option optionid=""     label="forms.select"        value=""/>
            <option optionid="England"   label="country.gb.england"        value="England"/>
            <option optionid="Scotland"   label="country.gb.scotland"         value="Scotland"/>
            <option optionid="Northern Ireland"   label="country.gb.northernireland"        value="Northern Ireland"/>
            <option optionid="Wales"   label="country.gb.wales"       value="Wales"/>
        </options>  
    </field>
</form>
