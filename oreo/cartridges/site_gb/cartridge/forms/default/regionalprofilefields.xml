<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19">
    <field formid="zip"
           label="profile.zip"
           type="string"
           mandatory="true"
           min-length="5"
           max-length="8"
           regexp="([a-zA-Z](?:(?:[a-zA-Z]?\d[a-zA-Z])|(?:\d{1,2})|(?:[a-zA-Z]\d{1,2}))\W?[0-9][a-z‌​A-Z]{2})"
           binding="custom.postalCode"
           missing-error="profile.zip.missing-error"
           value-error="profile.ziperror"/>
    <field formid="liveinus"
            label="profile.local"
            type="boolean"
            mandatory="false"
            binding="custom.isDomestic"
            default-value="false"/>
</form>
