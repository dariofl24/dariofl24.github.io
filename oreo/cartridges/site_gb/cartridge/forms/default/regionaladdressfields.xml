<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19">
    <!-- 03103 is a test postal code we have to allow in order to be able to test with Paymentech-->
    <field formid="zip" 
        label="forms.zippostalcode" 
        type="string" 
        mandatory="true" 
        min-length="5" 
        max-length="8" 
        regexp="([a-zA-Z](?:(?:[a-zA-Z]?\d[a-zA-Z])|(?:\d{1,2})|(?:[a-zA-Z]\d{1,2}))\W?[0-9][a-z‌​A-Z]{2})"
        binding="postalCode" 
        missing-error="forms.errorzip" 
        range-error="forms.address.field.invalid" 
        parse-error="forms.address.field.invalid" />

    <field formid="phone"
        label="profile.phone"
        description="forms.address.phone.example"
        type="string"
        mandatory="true"
        binding="phone"
        max-length="20"
        regexp="^[\s\d()+-]+$"
        missing-error="forms.address.phone.missing"
        range-error="forms.address.field.invalid"/>
        
    <field formid="phoneOpt"
        label="profile.phoneopt"
        description="forms.address.phone.example"
        type="string"
        mandatory="false"
        binding="phone"
        max-length="20"
        regexp="^[\s\d()+-]+$"
        missing-error="forms.address.phone.missing"
        range-error="forms.address.field.invalid"/>
        
    <field formid="country"
    	label="profile.country"
        type="string"
        default-value="GB"
        mandatory="true"
        binding="countryCode">

        <options>
            <option optionid="GB" label="country.greatbritain" value="GB"/>
        </options>  
    </field>
    
</form>
