<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19" secure="false" >
    <field formid="email"
                type="string"
                mandatory="true"
                regexp="^[\w\.%-]+@[\w\.-]+\.[\w]{2,6}$"
                parse-error="newemailaddress.emailparseerror"
                binding="email"
                max-length="50"
                value-error="newemailaddress.usernametaken"/>
                
        <field formid="birthday"
               type="date"
               mandatory="true"
               binding="birthday"
               parse-error="profile.birthday.invalid"
               value-error="profile.birthday.minage.error"/>

    <field  formid="gender" 
            type="string"
            mandatory="false"
            binding="gender">
        <options>
            <option optionid=""     label="newemailaddress.gender.select"        value=""/>
            <option optionid="male"     label="newemailaddress.gender.male"        value="m"/>
            <option optionid="female"     label="newemailaddress.gender.female"        value="f"/>
            <option optionid=""     label="newemailaddress.gender.unspecified"        value=""/>
        </options>
    </field>

    <field formid="promotion"
                type="string"
                mandatory="true"
                binding="promotion"
                max-length="50"/>
                
    <field formid="referrer"
                type="string"
                mandatory="false"
                binding="referrer"
                max-length="50"/>

    <action formid="register" valid-form="true"/>
    <action formid="cancel" valid-form="false"/>
</form>
