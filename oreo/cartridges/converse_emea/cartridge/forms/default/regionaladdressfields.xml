<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19">
    <field formid="zip" 
        label="forms.ordertrack.postalCode"
        type="string" 
        mandatory="true" 
        min-length="5" 
        max-length="10" 
        regexp=".*"
        binding="postalCode" 
        missing-error="forms.errorzip" 
        range-error="forms.address.field.invalid" 
        parse-error="forms.address.field.invalid" />

    <field formid="phone"
        label="profile.phone"
        description="forms.address.phone.example"
        type="string"
        mandatory="true"
        binding="phone"
        max-length="20"
        regexp=".*"
        missing-error="forms.address.phone.missing"
        range-error="forms.address.field.invalid"/>
        
    <field formid="phoneOpt"
        label="profile.phoneopt"
        description="forms.address.phone.example"
        type="string"
        mandatory="false"
        binding="phone"
        max-length="20"
        regexp="^[\s\d()+-]+$"
        missing-error="forms.address.phone.missing"
        range-error="forms.address.field.invalid"/>

    <field formid="country"
        label="forms.country"
        type="string"
        mandatory="true"
        binding="countryCode"
        missing-error="forms.address.country.missing"
        value-error="forms.address.field.invalid">
    </field>
</form>
