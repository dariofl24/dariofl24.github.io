<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19">

	<field 
	       formid="password" 
	       label="resetpassword.password"
	       type="string" 
	       mandatory="true" 
	       min-length="8" 
	       max-length="255"
		   range-error="forms.8_255characters" />	
		
	<field 
	       formid="confirmpassword" 
	       label="resetpassword.confirmpassword" 
	       type="string" 
	       mandatory="true" 
	       min-length="8" 
	       max-length="255"
	       range-error="forms.8_255characters" />	
	
	<action formid="send" valid-form="true"/>
    <action formid="cancel" valid-form="false"/>
</form>
