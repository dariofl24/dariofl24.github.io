<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19" secure="false" >
    <!-- user details -->
    <field  formid="firstname"
            label="rubbertracks.firstname"
            type="string"
            mandatory="true"
            missing-error="rubbertracks.firstname.missing-error"
            max-length="50"
            range-error="rubbertracks.firstname.maxlength-error" />

    <field  formid="lastname"
            label="rubbertracks.lastname"
            type="string"
            mandatory="true"
            missing-error="rubbertracks.lastname.missing-error"
            max-length="50"
            range-error="rubbertracks.lastname.maxlength-error" />

    <field  formid="email"
            label="rubbertracks.email"
            type="string"
            mandatory="true"
            missing-error="rubbertracks.email.missing-error"
            regexp="^[\w.%+-]+@[\w.-]+\.[\w]{2,6}$"
            parse-error="profile.emailparseerror"
            max-length="50"
            range-error="profile.email.maxlength-error" />

    <field  formid="phone"
            label="rubbertracks.phone"
            type="string"
            mandatory="true"
            missing-error="rubbertracks.phone.missing-error"
            regexp="^1?\W*([2-9][0-8][0-9])\W*([2-9][0-9]{2})\W*([0-9]{4})(\se?x?t?(\d*))?$"
            max-length="20"
            parse-error="profile.phoneparseerror"
            range-error="profile.phone.maxlength-error" />
            
    <field  formid="city"
            label="rubbertracks.city"
            type="string"
            mandatory="true"
            missing-error="rubbertracks.city.missing-error"
            max-length="50"
            range-error="rubbertracks.city.maxlength-error" />
            
    <include formid="states" name="states"/>

    <field  formid="stateNonUS"
            label="forms.state"
            type="string"
            mandatory="false"
            max-length="50"/>

    <include formid="countries" name="countries"/>

    <!-- band details -->        
    <field  formid="bandname"
            label="rubbertracks.bandname"
            type="string"
            mandatory="true"
            missing-error="rubbertracks.bandname.missing-error"
            max-length="50"
            range-error="rubbertracks.bandname.maxlength-error" />

    <field  formid="banddescription"
            label="rubbertracks.banddescription"
            type="string"
            mandatory="true"
            missing-error="rubbertracks.banddescription.missing-error"
            max-length="3000"
            range-error="rubbertracks.banddescription.maxlength-error" />

    <field  formid="bandurls"
            label="rubbertracks.bandurls"
            type="string"
            mandatory="false"
            max-length="500"
            range-error="rubbertracks.bandurls.maxlength-error" />

    <!-- music recording details -->
    <field  formid="songs"
            label="rubbertracks.songs"
            type="string"
            mandatory="true"
            missing-error="rubbertracks.songs.missing-error">
            <options>
                <option optionid="None" value="" label="forms.select" />
                <option optionid="One" value="rubbertracks.songs.1" label="rubbertracks.songs.1" />
                <option optionid="Two" value="rubbertracks.songs.2" label="rubbertracks.songs.2" />
                <option optionid="Three" value="rubbertracks.songs.3" label="rubbertracks.songs.3" />
            </options>
     </field>

     <field formid="goals"
            label="rubbertracks.goals"
            type="string"
            mandatory="true"
            missing-error="rubbertracks.goals.missing-error">
            <options>
                <option optionid="None" value="" label="forms.select" />
                <option optionid="Two" value="rubbertracks.goals.1" label="rubbertracks.goals.1" />
                <option optionid="Three" value="rubbertracks.goals.2" label="rubbertracks.goals.2" />
                <option optionid="Four" value="rubbertracks.goals.3" label="rubbertracks.goals.3" />
            </options>
     </field>

     <field formid="stages"
            label="rubbertracks.stages"
            type="string"
            mandatory="true"
            missing-error="rubbertracks.stages.missing-error">
            <options>
                <option optionid="None" value="" label="forms.select" />
                <option optionid="One" value="rubbertracks.stages.1" label="rubbertracks.stages.1" />
                <option optionid="Two" value="rubbertracks.stages.2" label="rubbertracks.stages.2" />
                <option optionid="Three" value="rubbertracks.stages.3" label="rubbertracks.stages.3" />
                <option optionid="Four" value="rubbertracks.stages.4" label="rubbertracks.stages.4" />
                <option optionid="Five" value="rubbertracks.stages.5" label="rubbertracks.stages.5" />
            </options>
     </field>

     <field formid="genres"
            label="rubbertracks.genres"
            type="string"
            mandatory="true"
            missing-error="rubbertracks.genres.missing-error">
            <options>
                <option optionid="None" value="" label="forms.select" />
                <option optionid="One" value="rubbertracks.genres.1" label="rubbertracks.genres.1" />
                <option optionid="Two" value="rubbertracks.genres.2" label="rubbertracks.genres.2" />
                <option optionid="Three" value="rubbertracks.genres.3" label="rubbertracks.genres.3" />
                <option optionid="Four" value="rubbertracks.genres.4" label="rubbertracks.genres.4" />
                <option optionid="Five" value="rubbertracks.genres.5" label="rubbertracks.genres.5" />
                <option optionid="Six" value="rubbertracks.genres.6" label="rubbertracks.genres.6" />
                <option optionid="Seven" value="rubbertracks.genres.7" label="rubbertracks.genres.7" />
                <option optionid="Eight" value="rubbertracks.genres.8" label="rubbertracks.genres.8" />
                <option optionid="Nine" value="rubbertracks.genres.9" label="rubbertracks.genres.9" />
            </options>
     </field>

     <field formid="acceptedtermsandconditions"
            type="boolean"
            mandatory="true">
     </field>   

     <!-- signup centers -->
     <field formid="signupcenter"
            label="signupcenter"
            type="string"
            mandatory="false"
            max-length="50"/>

    <field  formid="guitarcenter"
            label="guitarcenter"
            type="string"
            mandatory="false"
            max-length="50"/>

    <action formid="register" valid-form="true"/>
    <action formid="cancel" valid-form="false"/>
</form>
