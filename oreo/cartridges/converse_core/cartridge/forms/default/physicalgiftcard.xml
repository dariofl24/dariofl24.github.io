<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19">
	<group formid="purchase">
        <field 
            formid="pid" 
            label="forms.physicalgiftcard.purchase.pid.label" 
            type="string" 
            mandatory="true"
            description="forms.physicalgiftcard.purchase.pid.description"
            missing-error="forms.physicalgiftcard.purchase.pid.missing-error"
            binding="pid"/>
            
       <field 
            formid="quantity" 
            label="forms.physicalgiftcard.purchase.quantity.label" 
            type="integer" 
            mandatory="true"
            description="forms.physicalgiftcard.purchase.quantity.description"
            missing-error="forms.physicalgiftcard.purchase.quantity.missing-error"
            range-error="forms.physicalgiftcard.purchase.quantity.range-error"
            parse-error="forms.physicalgiftcard.purchase.quantity.parse-error"
            binding="quantity"
            default-value="1"
            min="1"
            max="99"
            regexp="^[\d]+$"/>
    </group>

    <action formid="purchasePhysical" valid-form="true"/>
</form>