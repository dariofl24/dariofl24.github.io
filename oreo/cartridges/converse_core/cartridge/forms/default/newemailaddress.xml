<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19" secure="false" >
    <field formid="email"
                label="newemailaddress.emailaddress"
                type="string"
                mandatory="true"
                regexp="^[\w\.%-]+@[\w\.-]+\.[\w]{2,6}$"
                parse-error="newemailaddress.emailparseerror"
                binding="email"
                max-length="50"
                value-error="newemailaddress.usernametaken"/>

    <field formid="birthday"
                label="newemailaddress.birthday"
                type="string"
                mandatory="true"
                binding="birthday"
                max-length="10"/>

    <field formid="promotion"
                type="string"
                mandatory="true"
                binding="promotion"
                max-length="50"/>

    <action formid="register" valid-form="true"/>
    <action formid="cancel" valid-form="false"/>
</form>
