<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19" secure="false">
	<field 
        formid="email" 
        label="profile.email" 
        type="string" 
        mandatory="true"
        max-length="50" 
        regexp="^[\w.%+-]+@[\w.-]+\.[\w]{2,6}$"
		parse-error="profile.emailparseerror"
		range-error="profile.emailparseerror"
		missing-error="profile.emailparseerror"
		value-error="profile.emailparseerror"/>
		
	<action formid="send" valid-form="true"/>
	<action formid="cancel" valid-form="false"/>
</form>
