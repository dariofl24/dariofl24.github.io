/**
* @input Unit: Object
*/
importPackage(dw.system);
importPackage(dw.util);

importScript("module_test:Framework/Assert.ds");
importScript("module_test:Framework/Unit.ds");

importScript("converse_core:constants.ds");
importScript("converse_core:account/order/OrderUtils.ds");

function execute(args : PipelineDictionary) : Number {
    let OrderUtils = converse.account.order.OrderUtils;

    args.Unit.describe("Order Utils Test Suite")
        .test("Should return true when both parameters are equal", function() {
            let item = "Shipped";
            Assert.isTrue(OrderUtils.equalsIgnoreCase(item, item));
        })
        .test("Should return true when both parameters are equal but have different case", function() {
            let item1 = "SHIPPED";
            let item2 = "Shipped";
            Assert.isTrue(OrderUtils.equalsIgnoreCase(item1, item2));
        })
        .test("Should return false if both strings are different", function() {
            let item1 = "SHIPPED1";
            let item2 = "Shipped";
            Assert.isFalse(OrderUtils.equalsIgnoreCase(item1, item2));
        });

    return PIPELET_NEXT;
}