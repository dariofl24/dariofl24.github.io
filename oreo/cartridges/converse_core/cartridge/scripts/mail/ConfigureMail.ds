/**
 * This script sets up the mail configuration object.
 *
 * @output MailConfig : Object The mail configuration object.
 */

importPackage(dw.system);

importScript("converse_core:constants.ds");
importScript("converse_core:mail/MailUtils.ds");

function execute(args : PipelineDictionary) : Number
{
    args.MailConfig = converse.mail.MailUtils.configureMail();

    return PIPELET_NEXT;
}
