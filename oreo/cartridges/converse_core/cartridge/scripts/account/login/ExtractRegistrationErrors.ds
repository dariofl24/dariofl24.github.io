/**
 * This script gets registration form errors.
 *
 * @input Form : dw.web.Form The registration form.
 * @output FormErrors : Object The object with form errors. 
 */

importPackage(dw.customer);
importPackage(dw.system);
importPackage(dw.web);

importScript("util/ViewHelpers.ds");

function execute(args : PipelineDictionary) : Number
{
	var form : Form = args.Form;
	
	args.FormErrors = ViewHelpers.getFormElementsWithError(form);  

	return PIPELET_NEXT;
}
