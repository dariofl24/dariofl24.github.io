<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19">
    <field formid="zip" 
        label="forms.zippostalcode" 
        type="string" 
        mandatory="true" 
        min-length="5" 
        max-length="8" 
        regexp="^(V-|I-|IT-)?[0-9]{5}$"
        binding="postalCode" 
        missing-error="forms.errorzip" 
        range-error="forms.address.field.invalid" 
        parse-error="forms.address.field.invalid" />

    <field formid="phone"
        label="profile.phone"
        description="forms.address.phone.example"
        type="string"
        mandatory="true"
        binding="phone"
        max-length="20"
        regexp="^[\s\d()+-]+$"
        missing-error="forms.address.phone.missing"
        range-error="forms.address.field.invalid"/>
        
    <field formid="phoneOpt"
        label="profile.phoneopt"
        description="forms.address.phone.example"
        type="string"
        mandatory="false"
        binding="phone"
        max-length="20"
        regexp="^[\s\d()+-]+$"
        missing-error="forms.address.phone.missing"
        range-error="forms.address.field.invalid"/>

    <field formid="country"
    	label="profile.country"
        type="string"
        default-value="IT"
        mandatory="true"
        binding="countryCode">

        <options>
            <option optionid="IT" label="country.italy" value="IT" selected="selected"/>
        </options>  
    </field>
    
</form>
