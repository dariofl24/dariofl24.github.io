<?xml version="1.0" encoding="UTF-8" ?>
<?demandware-pipeline version="2.0"?>

<pipeline group="Integration" type="process">
  <description>US version of exteranl tax proxy. Uses Sigma.</description>
  <branch basename="CalculateTaxes">
    <segment>
      <node>
        <start-node call-mode="private" name="CalculateTaxes" secure="false"/>
        <node-display x="1" y="1"/>
      </node>
      <simple-transition>
        <transition-display>
          <bend-point relative-to="source" x="0" y="1"/>
        </transition-display>
      </simple-transition>
      <node>
        <call-node start-name-ref="SigmaTax-CalculateTaxes"/>
        <node-display x="0" y="1"/>
      </node>
      <simple-transition>
        <transition-display>
          <bend-point relative-to="target" x="0" y="-1"/>
        </transition-display>
      </simple-transition>
      <node>
        <end-node name="ok"/>
        <node-display x="0" y="2"/>
      </node>
    </segment>
  </branch>
</pipeline>
